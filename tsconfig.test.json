{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2017",
    "baseUrl": ".",
    "rootDir": "./src",
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*"
  ]
}